<section class="form-section d-flex flex-column align-items-center">
  <h1 class="text fw-bolder">Answers</h1>

  <div id="quiz_assessments">
    <% @answers.each do |answer| %>
    <div  class="bg bg-light p-4 m-3 border">
      <%= render answer %>

      <p>
        <%= link_to "Show this quiz test", quiz_assessment_question_answer_path(answer.quiz_assessment_id, answer.question_id, answer) %>
      </p>
    </div>
    <% end %>
    <%= link_to "New answer", new_quiz_assessment_question_answer_path %>
  </div>
</section>